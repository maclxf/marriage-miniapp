/* pages/map/index.wxss */
@import '/static/css/animate.wxss';
@import '/static/css/animations.wxss';
.container {
  min-height: 100vh;
  background-size: cover;
  --primary-color: #FFFFCC;
  --primary-bg-color: #CCFFFF;
  --info-color: #FFCCCC;
  --info-bg-color:#FFCCCC;
}


.datetime {
  width: 620rpx;
  padding: 15rpx;
  margin: 20rpx 50rpx 20rpx 50rpx;
  background-color: #FFCCCC;
  color:#684c4b;
  border-radius: 10px;

}

.box {
  padding: 20rpx;
  position: relative;
}

.we {
  position: absolute;
  bottom: 0;
  left: 40rpx;
  width: 520rpx;
  height: 14rpx;
}

.date {

  font-size: 30rpx;
  line-height: 50rpx;
  margin-top: 20rpx;
}

.name {
  width: 400rpx;
  margin: 0 auto;
  min-height: 0;
  overflow: hidden;
  font-size: 50rpx;
  line-height: 50rpx;
  text-align: center;
}

.t1 {
  width: 626rpx;
  height: 180rpx;
  margin: 0 auto;
  display: block;
}

#map {
  width: 694rpx;
  height: 600rpx;
  margin: 0 auto;
  margin-bottom: 30rpx;
  margin-top: 20rpx;
  border: 3rpx solid #684c4b;
}

.tel {
  width: 500rpx;
  margin: 0 auto;
  min-height: 0;
  text-align: center;
  font-size: 24rpx;
  color: #684c4b;
  line-height: 50rpx;
  padding-bottom: 50rpx;
  display: flex;
  justify-content: center;
}

.tel-item {
  width: 200rpx;
}

.call {
  width: 80rpx;
  height: 80rpx;
  display: block;
  margin: 0 auto;
}
.call-0 {
  animate-delay: 1s;
  animate-duration: 1s;
}
.call-1 {
  animate-delay: 2s;
  animate-duration: 1s;
}
.call-2 {
  animate-delay: 3s;
  animate-duration: 1s;
}
.call-3 {
  animate-delay: 4s;
  animate-duration: 1s;
}


.call image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.copyright {
  text-align: center;
  font-size: 20rpx;
  line-height: 25rpx;
  padding-bottom: 20rpx;
  color: #684c4b;
}
